    <title>New Search</title>
</head>
<body>
    <nav>
        <h1>test search page</h1>
    </nav>

    <form action="/searches/new" method="POST">
        <fieldset>
            <legend>Search by Title or Author</legend>
            <input type="text" name="userInput">

            <label for="title">Title</label>
            <input type="radio" id='title' name="author-title" value="title">

            <label for="author">Author</label>
            <input type="radio" id='author' name="author-title" value="author">
            
            <input type="submit" value="Search the Google Books API">
        </fieldset>
    </form>
